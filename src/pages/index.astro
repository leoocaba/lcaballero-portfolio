---
import BaseLayout from "../layouts/BaseLayout.astro";
import data from "../../data/portfolio.json";

import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";

const { inicio, redesSociales } = data;
---

<BaseLayout title="Inicio">
	<main>
		<section
			id="inicio"
			class="flex flex-col-reverse md:flex-row items-center text-center w-full px-2 my-auto"
		>
			<div class="flex-column m-auto p-auto">
				<h1
					class="text-center md:text-start text-4xl md:text-5xl lg:text-7xl font-bold my-6 md:m-auto leading-tight"
				>
					Â¡Hola! soy <a
						href="https://www.linkedin.com/in/leonel-marcelo-caballero-6a1a3318a/"
						target="_blank"
						rel="noopener noreferrer"
						><span class="block text-green-600"
							>{inicio.nombre}
							{inicio.apellido}</span
						></a
					>
				</h1>

				<h2
					class="flex flex-col md:flex-row items-center md:items-center text-center text-lg md:text-xl lg:text-2xl md:text-start uppercase py-4 md:px-1 md:gap-4"
				>
					<span class="leading-tight md:leading-normal"
						>{inicio.profesion}</span
					>
					<span
						class="flex items-center justify-center rounded-full w-52 md:w-auto border-2 md:border-4 border-slate-500 px-4 md:px-6 py-2 mx-auto md:mx-0 my-2 md:my-0"
					>
						{inicio.stack}
					</span>
				</h2>
				<nav class="flex gap-x-2 justify-center md:justify-start mt-2">
					<SocialPill href={redesSociales.linkedIn}>
						<LinkedInIcon class="w-6 h-6" /> LinkedIn
					</SocialPill>

					<SocialPill href={redesSociales.github}>
						<GitHubIcon class="w-6 h-6" /> GitHub
					</SocialPill>
				</nav>
			</div>
			<img
				src={inicio.imagen}
				alt={`Foto de ${inicio.nombre} ${inicio.apellido}`}
				class="flex size-44 md:size-52 lg:size-64 m-auto rounded-full border-4 border-slate-400"
			/>
		</section>
	</main>
</BaseLayout>
