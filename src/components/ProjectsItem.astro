---
interface Project {
    nombre: string;
    fecha: string;
    github?: string;
    link: string;
    descripcion: string;
    imagen: string;
    tecnologias?: string[];
}

interface Props {
    project: Project;
}

const { project } = Astro.props as Props;
const {
    nombre,
    fecha,
    github,
    link,
    descripcion,
    imagen,
    tecnologias = [],
} = project;
---

<div
    class="bg-slate-950/10 shadow-md rounded-lg overflow-hidden mb-16 shadow-slate-800/20 border border-zinc-200/20"
>
    <div class="py-4 px-0">
        <div class="__title flex flex-row items-center justify-between mb-4">
            <h2
            class="text-xl md:text-3xl font-semibold text-gray-900 dark:text-white my-auto mx-4"
        >
            {nombre}
        </h2>
        <p class="text-gray-400 dark:text-gray-500 text-md my-auto mx-4">
            {fecha}
        </p>
        </div>
        <div class="__description-and-image grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-4">
            <div class="__description">
                <p
                class="text-md font-normal text-balance text-gray-500 dark:text-gray-400 mb-2 mx-4"
            >
                {descripcion}
            </p>
            <div class="__tennologies flex flex-col">
                <h5
                class="text-md md:text-xl font-normal text-gray-400 dark:text-gray-500 my-2 mx-4"
            >
                Tecnolog√≠as
            </h5>
            <div class="flex flex-wrap gap-2 mx-4">
                {
                    tecnologias.map((tech) => (
                        <span class="bg-gray-200 text-gray-800 py-2 px-3 rounded-full text-xs text-center border border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                            {tech}
                        </span>
                    ))
                }
            </div>
            
            </div>
            
            </div>
            <div class="align-center px-4">
                <img
                    src={imagen}
                    alt={nombre}
                    class="w-full h-75 object-fill rounded-lg mt-1 mb-2"
                />
                <div class="flex flex-row justify-between mx-0 my-4">
                    <a
                        href={github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center px-3 py-2 text-sm font-medium text-customGeen hover:scale-110 transition bg-white border border-gray-200 rounded-full hover:bg-gray-100 hover:text-customGreen focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-customGreen dark:bg-gray-800 dark:text-customGreen dark:border-gray-600 dark:hover:text-customGreen dark:hover:bg-gray-700 dark:focus:ring-gray-700"
                    >
                        Ir a GitHub{" "}
                        <svg
                            class="w-3 h-3 ms-2 rtl:rotate-180"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 14 10"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                        </svg>
                    </a>
                    <a
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center px-3 py-2 text-sm font-medium text-customGeen hover:scale-110 transition bg-white border border-gray-200 rounded-full hover:bg-gray-100 hover:text-customGreen focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-customGreen dark:bg-gray-800 dark:text-customGreen dark:border-gray-600 dark:hover:text-customGreen dark:hover:bg-gray-700 dark:focus:ring-gray-700"
                    >
                        Ver Proyecto{" "}
                        <svg
                            class="w-3 h-3 ms-2 rtl:rotate-180"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 14 10"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</div>
