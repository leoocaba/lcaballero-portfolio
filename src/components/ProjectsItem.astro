---
interface Project {
    nombre: string;
    fecha: string;
    github?: string;
    link: string;
    descripcion: string;
    imagen: string;
    tecnologias?: string[];
}

interface Props {
    project: Project;
}

const { project } = Astro.props as Props;
const {
    nombre,
    fecha,
    github,
    link,
    descripcion,
    imagen,
    tecnologias = [],
} = project;
---

<div class="bg-slate-950/10 shadow-md rounded-lg overflow-hidden mb-16 shadow-slate-800/20 border border-zinc-200">
    <div class="py-4 px-0">
        <h2 class="text-xl md:text-3xl font-semibold text-gray-900 dark:text-white mb-4 mx-4">{nombre}</h2>
        <p class=" text-gray-400 dark:text-gray-500 text-md mb-4 mx-4">{fecha}</p>
        <p class="text-md font-normal text-balance text-gray-500 dark:text-gray-400 mb-4 mx-4">{descripcion}</p>
        <div class="flex flex-wrap gap-2 mb-4 mx-4">
            {
                tecnologias.map((tech) => (
                    <span class="bg-gray-200 text-gray-800 px-3 py-2 rounded-full text-xs border border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        {tech}
                    </span>
                ))
            }
        </div>
        <img src={imagen} alt={nombre} class="w-full h-75 object-contain py-0 px-4" />
        <div class="flex justify-between mt-4 mx-4">
            <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-customGeen bg-white border border-gray-200 rounded-full hover:bg-gray-100 hover:text-customGreen focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-customGreen dark:bg-gray-800 dark:text-customGreen dark:border-gray-600 dark:hover:text-customGreen dark:hover:bg-gray-700 dark:focus:ring-gray-700 transition"
            >
                GitHub{" "}
                <svg
                    class="w-3 h-3 ms-2 rtl:rotate-180"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 14 10"
                >
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                </svg>
            </a>
            <a
                href={link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-customGeen bg-white border border-gray-200 rounded-full hover:bg-gray-100 hover:text-customGreen focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-customGreen dark:bg-gray-800 dark:text-customGreen dark:border-gray-600 dark:hover:text-customGreen dark:hover:bg-gray-700 dark:focus:ring-gray-700 transition"
            >
                Ver Proyecto{" "}
                <svg
                    class="w-3 h-3 ms-2 rtl:rotate-180"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 14 10"
                >
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                </svg>
            </a>
        </div>
    </div>
</div>
